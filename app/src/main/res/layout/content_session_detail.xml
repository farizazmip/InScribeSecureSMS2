                android:textSize="18sp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="8dp" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Partner Number:" />

            <TextView
                android:id="@+id/text_PartnerNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
