            <TextView
                android:id="@+id/textView24"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Session AES Key:" />

            <EditText
                android:id="@+id/text_SessionAESKey"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
