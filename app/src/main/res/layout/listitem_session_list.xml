<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="0dp"
    android:layout_marginEnd="0dp"
    android:layout_marginLeft="0dp"
    android:layout_marginRight="0dp"
    android:layout_marginStart="0dp"
    android:layout_marginTop="0dp"
    android:baselineAligned="false"
    android:orientation="horizontal"
    android:paddingBottom="0dp"
    android:paddingEnd="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingStart="0dp"
    android:paddingTop="0dp">

    <FrameLayout
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp">

        <ImageView
            android:id="@+id/imageView_PartnerView"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:contentDescription="@string/contact_photo" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textlist_PartnerName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="@string/contact_photo"
            android:text="@string/dev_dummy_name"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textlist_SessionHandshakeDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/dev_dummy_date" />

        <TextView
            android:id="@+id/textlist_SessionDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/dev_dummy_timestamp" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="5dp"
        android:layout_height="76dp"
        android:layout_gravity="right|center"
        android:layout_marginBottom="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp">

        <ImageView
            android:id="@+id/imageView_SessionStatus"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_gravity="top|right"
            android:contentDescription="@string/color_container" />

        <ImageView
            android:id="@+id/imageView_SessionDuration"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_gravity="bottom|right"
            android:contentDescription="@string/color_container" />

    </FrameLayout>

</LinearLayout>
