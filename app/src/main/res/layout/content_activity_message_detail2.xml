<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="digitalquantuminc.inscribesecuresms.ChildrenActivity.ActivityMessageDetail"
    tools:showIn="@layout/activity_message_detail2">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_MessageTimeStampLong"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/LinearLayout_General"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">



                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/message_partner_name"
                    android:textAlignment="viewStart" />

                <TextView
                    android:id="@+id/text_MessagePartnerName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/dev_dummy_name"
                    android:textSize="18sp" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="8dp" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/message_partner_number" />

                <TextView
                    android:id="@+id/text_MessagePartnerNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/dev_dummy_number"
                    android:textSize="18sp" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="8dp" />

                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/message_type" />

                <TextView
                    android:id="@+id/text_MessageType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/dev_dummy_name"
                    android:textSize="18sp" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="8dp" />

                <TextView
                    android:id="@+id/textView27"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/message_datetimestamp" />

                <TextView
                    android:id="@+id/text_MessageTimeStamp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/dev_dummy_date"
                    android:textSize="18sp" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="8dp" />

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/message_content" />

                <EditText
                    android:id="@+id/text_MessageContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:gravity="start"
                    android:inputType="textMultiLine"
                    android:labelFor="@+id/text_MessageContent"
                    android:maxLines="3"
                    android:minLines="3"
                    android:scrollbars="vertical"
                    android:text="@string/dev_dummy_emptystring"
                    android:textSize="18sp" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="8dp" />

                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/message_decodedtextmessage" />

                <EditText
                    android:id="@+id/text_DecodedTextMessage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:gravity="start"
                    android:inputType="textMultiLine"
                    android:labelFor="@+id/text_DecodedTextMessage"
                    android:lines="3"
                    android:maxLines="3"
                    android:minLines="3"
                    android:scrollbars="vertical"
                    android:text="@string/dev_dummy_emptystring"
                    android:textSize="18sp" />
            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="32dp" />

            <LinearLayout
                android:id="@+id/LinearLayout_Handshake"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView20"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/message_ecdh_sendpubkey" />

                <EditText
                    android:id="@+id/text_PartnerECDHSessionPublicKey"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:gravity="start"
                    android:inputType="textMultiLine"
                    android:labelFor="@+id/text_PartnerECDHSessionPublicKey"
                    android:maxLines="3"
                    android:minLines="3"
                    android:scrollbars="vertical"
                    android:text="@string/dev_dummy_emptystring"
                    android:textSize="18sp" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="8dp" />

                <TextView
                    android:id="@+id/textView21"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/message_ecdh_calculatedds" />

                <EditText
                    android:id="@+id/text_PartnerDigitalSignature"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:gravity="start"
                    android:inputType="textMultiLine"
                    android:labelFor="@+id/text_PartnerDigitalSignature"
                    android:maxLines="3"
                    android:minLines="3"
                    android:scrollbars="vertical"
                    android:text="@string/dev_dummy_emptystring"
                    android:textSize="18sp" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="8dp" />

                <TextView
                    android:id="@+id/textView22"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/message_dsvalidity" />

                <TextView
                    android:id="@+id/text_PartnerValidity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/dev_dummy_status"
                    android:textColor="@android:color/holo_green_dark"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="8dp" />

                <Button
                    android:id="@+id/btn_AcceptSecureSession"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:enabled="false"
                    android:text="@string/message_acceptsecure" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="8dp" />

                <Button
                    android:id="@+id/btn_ActivateSecureSession"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:enabled="false"
                    android:text="@string/message_activatesecure" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="8dp" />

                <Button
                    android:id="@+id/btn_RejectSecureSession"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:enabled="false"
                    android:text="@string/message_rejectsecure" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/LinearLayout_ErrorMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            </LinearLayout>

            <LinearLayout
                android:id="@+id/LinearLayout_NormalMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView29"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/message_AESIV" />

                <EditText
                    android:id="@+id/text_AESIVText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:gravity="start"
                    android:inputType="textMultiLine"
                    android:labelFor="@+id/text_AESIVText"
                    android:lines="3"
                    android:maxLines="3"
                    android:minLines="3"
                    android:scrollbars="vertical"
                    android:text="@string/dev_dummy_emptystring"
                    android:textSize="18sp" />


                <Space
                    android:layout_width="match_parent"
                    android:layout_height="8dp" />

                <TextView
                    android:id="@+id/textView30"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/message_AESCT" />

                <EditText
                    android:id="@+id/text_AESCTText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:gravity="start"
                    android:inputType="textMultiLine"
                    android:labelFor="@+id/text_AESCTText"
                    android:lines="3"
                    android:maxLines="3"
                    android:minLines="3"
                    android:scrollbars="vertical"
                    android:text="@string/dev_dummy_emptystring"
                    android:textSize="18sp" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="8dp" />

                <TextView
                    android:id="@+id/textView31"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/message_decryptedtext" />

                <EditText
                    android:id="@+id/text_DecryptedTextMessage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:gravity="start"
                    android:inputType="textMultiLine"
                    android:labelFor="@+id/text_DecryptedTextMessage"
                    android:lines="3"
                    android:maxLines="3"
                    android:minLines="3"
                    android:scrollbars="vertical"
                    android:text="@string/dev_dummy_emptystring"
                    android:textSize="18sp" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="8dp" />

                <TextView
                    android:id="@+id/textView32"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/message_plaintext" />

                <EditText
                    android:id="@+id/text_PlainText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:gravity="start"
                    android:inputType="textMultiLine"
                    android:labelFor="@+id/text_ComposeCompressedText"
                    android:lines="3"
                    android:maxLines="3"
                    android:minLines="3"
                    android:scrollbars="vertical"
                    android:text="@string/dev_dummy_emptystring"
                    android:textSize="18sp" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="16dp" />

                <Button
                    android:id="@+id/btn_DecryptMessage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:enabled="false"
                    android:text="@string/message_decryptemessage" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="16dp" />

                <Button
                    android:id="@+id/btn_SavePlainMessage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:enabled="false"
                    android:text="@string/message_saveplain" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="16dp" />

                <Button
                    android:id="@+id/btn_ClearPlainMessage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:enabled="false"
                    android:text="@string/message_clearplaintext" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="16dp" />

            </LinearLayout>

            <Button
                android:id="@+id/btn_DeleteMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/message_deletemessage" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="16dp" />

            <Button
                android:id="@+id/btn_CloseMessageView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/message_closebutton" />

        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>
