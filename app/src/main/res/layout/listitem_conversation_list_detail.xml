<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="0dp"
    android:layout_marginEnd="0dp"
    android:layout_marginLeft="0dp"
    android:layout_marginRight="0dp"
    android:layout_marginStart="0dp"
    android:layout_marginTop="0dp"
    android:baselineAligned="false"
    android:orientation="vertical"
    android:paddingBottom="0dp"
    android:paddingEnd="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingStart="0dp"
    android:paddingTop="0dp">

    <TextView
        android:id="@+id/textlist_Direction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:visibility="gone" />

    <TextView
        android:id="@+id/textlist_TimeStamp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:visibility="gone" />

    <TextView
        android:id="@+id/textlist_PartnerNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="@string/contact_photo"
        android:text="@string/dev_dummy_number"
        android:textSize="8sp"
        android:textStyle="bold"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/LinearLayout_Partner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:background="@color/colorLightCyan"
        android:baselineAligned="false"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="0dp"
        android:paddingEnd="0dp"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:paddingStart="0dp"
        android:paddingTop="0dp">

        <ImageView
            android:id="@+id/imageView_LeftPartner"
            android:layout_width="5dp"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:contentDescription="@string/color_container" />

        <FrameLayout
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp">

            <ImageView
                android:id="@+id/imageView_PartnerView"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:contentDescription="@string/contact_photo" />

        </FrameLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            android:gravity="center_vertical|center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textlist_MessageContentPartner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lines="8"
                android:maxLines="8"
                android:minLines="1"
                android:text="@string/dev_dummy_date"
                android:textSize="14sp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="16dp" />

            <TextView
                android:id="@+id/textlist_MessageTypePartner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/dev_dummy_timestamp"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/textlist_MessageTimeStampPartner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/dev_dummy_timestamp"
                android:textSize="12sp" />

        </LinearLayout>

        <ImageView
            android:id="@+id/imageView_RightPartner"
            android:layout_width="5dp"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:contentDescription="@string/color_container" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/LinearLayout_Your"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:background="@color/colorLightGreen"
        android:baselineAligned="false"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="0dp"
        android:paddingEnd="0dp"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:paddingStart="0dp"
        android:paddingTop="0dp">

        <ImageView
            android:id="@+id/imageView_LeftYour"
            android:layout_width="5dp"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:contentDescription="@string/color_container" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            android:gravity="center_vertical|center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textlist_MessageContentYour"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:lines="8"
                android:maxLines="8"
                android:minLines="1"
                android:text="@string/dev_dummy_date"
                android:textAlignment="textEnd"
                android:textSize="14sp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="16dp" />

            <TextView
                android:id="@+id/textlist_MessageTypeYour"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/dev_dummy_timestamp"
                android:textAlignment="textEnd"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/textlist_MessageTimeStampYour"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/dev_dummy_timestamp"
                android:textAlignment="textEnd"
                android:textSize="12sp" />

        </LinearLayout>

        <FrameLayout
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp">

            <ImageView
                android:id="@+id/imageView_YourView"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:contentDescription="@string/contact_photo" />
        </FrameLayout>

        <ImageView
            android:id="@+id/imageView_RightYour"
            android:layout_width="5dp"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:contentDescription="@string/color_container" />

    </LinearLayout>
</LinearLayout>
