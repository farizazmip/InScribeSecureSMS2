<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="digitalquantuminc.inscribesecuresms">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ActivityMain"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ActivityConversationDetail"
            android:label="@string/title_activity_conversation_detail"
            android:parentActivityName=".ActivityMain"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="digitalquantuminc.inscribesecuresms.ActivityMain" />
        </activity>
        <activity
            android:name=".ActivitySingleMessageView"
            android:label="@string/title_activity_single_message_view"
            android:parentActivityName=".ActivityConversationDetail"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="digitalquantuminc.inscribesecuresms.ActivityConversationDetail" />
        </activity>
        <activity
            android:name=".ActivityContactsDetail"
            android:label="@string/title_activity_contacts_detail"
            android:parentActivityName=".ActivityMain"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="digitalquantuminc.inscribesecuresms.ActivityMain" />
        </activity>
        <activity
            android:name=".ActivitySessionDetail"
            android:label="@string/title_activity_session_detail"
            android:parentActivityName=".ActivityMain"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="digitalquantuminc.inscribesecuresms.ActivityMain" />
        </activity>
    </application>

</manifest>