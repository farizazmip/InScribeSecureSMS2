<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:baselineAligned="false"
    android:orientation="horizontal"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_marginEnd="16dp"
        android:layout_width="40dp"
        android:layout_height="40dp">

        <ImageView
            android:id="@+id/imageView_ContactView"
            android:contentDescription="@string/contact_photo"
            android:layout_width="40dp"
            android:layout_height="40dp" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_gravity="center_vertical">

        <TextView
            android:id="@+id/textlist_ContactName"
            android:contentDescription="@string/contact_photo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/dev_dummy_name"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textlist_ContactPhoneNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/dev_dummy_number" />
    </LinearLayout>

    <FrameLayout
        android:layout_marginEnd="16dp"
        android:layout_width="5dp"
        android:layout_height="40dp">

        <ImageView
            android:id="@+id/imageView_ContactAccent"
            android:contentDescription="@string/color_container"
            android:layout_width="5dp"
            android:layout_height="match_parent" />
    </FrameLayout>

</LinearLayout>
